<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.github.jcustenborder.kafka.connect</groupId>
        <artifactId>kafka-connect-parent</artifactId>
        <version>2.2.1-cp1</version>
    </parent>
    <groupId>com.redislabs</groupId>
    <artifactId>redis-enterprise-kafka</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>redis-enterprise-kafka</name>
    <description>Kafka Connect source and sink connectors for Redis Enterprise</description>
    <url>https://github.com/RedisLabs-Field-Engineering/redis-enterprise-kafka</url>
    <inceptionYear>2021</inceptionYear>
    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>jruaux</id>
            <name>Julien Ruaux</name>
            <url>https://github.com/jruaux</url>
            <roles>
                <role>Committer</role>
            </roles>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:https://github.com/RedisLabs-Field-Engineering/redis-enterprise-kafka.git</connection>
        <developerConnection>scm:git:git@github.com:RedisLabs-Field-Engineering/redis-enterprise-kafka.git
        </developerConnection>
        <url>https://github.com/RedisLabs-Field-Engineering/redis-enterprise-kafka</url>
    </scm>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/RedisLabs-Field-Engineering/redis-enterprise-kafka/issues</url>
    </issueManagement>
    <repositories>
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/redis-developer/registry</url>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>io.lettuce</groupId>
            <artifactId>lettuce-core</artifactId>
            <version>6.1.2.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.30</version>
        </dependency>
        <dependency>
            <groupId>com.redislabs</groupId>
            <artifactId>spring-batch-redis</artifactId>
            <version>2.13.4</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.20</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.7.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.redislabs</groupId>
            <artifactId>testcontainers-redis</artifactId>
            <version>1.1.6</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>1.15.3-REDISLABS</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.projectreactor</groupId>
            <artifactId>reactor-test</artifactId>
            <version>3.4.6</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.7</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>2.8.1</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <source>8</source>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <skipAssembly>true</skipAssembly>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.confluent</groupId>
                <artifactId>kafka-connect-maven-plugin</artifactId>
                <version>0.11.2</version>
                <executions>
                    <execution>
                        <id>hub</id>
                        <goals>
                            <goal>kafka-connect</goal>
                        </goals>
                        <configuration>
                            <confluentControlCenterIntegration>true</confluentControlCenterIntegration>
                            <documentationUrl>https://developer.redislabs.com/kafka</documentationUrl>
                            <componentTypes>
                                <componentType>sink</componentType>
                                <componentType>source</componentType>
                            </componentTypes>
                            <tags>
                                <tag>redis</tag>
                                <tag>enterprise</tag>
                            </tags>
                            <title>Redis Enterprise Kafka</title>
                            <sourceUrl>https://github.com/RedisLabs-Field-Engineering/redis-enterprise-kafka</sourceUrl>
                            <ownerName>Redis Labs</ownerName>
                            <ownerUsername>redislabs</ownerUsername>
                            <ownerUrl>https://github.com/RedisLabs-Field-Engineering/redis-enterprise-kafka</ownerUrl>
                            <supportProviderName>Redis Labs</supportProviderName>
                            <supportSummary>
                                <![CDATA[This connector is <a href="https://redislabs.com/company/support/">supported by Redis Labs</a> as part of a
                                <a href="https://redislabs.com/redis-enterprise">Redis Enterprise</a> license.]]>
                            </supportSummary>
                            <dockerNamespace>redislabs</dockerNamespace>
                            <dockerName>redis-enterprise-kafka-docker</dockerName>
                            <excludes>
                                <exclude>io.netty:*</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
